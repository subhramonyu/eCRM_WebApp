<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Fluke Connect Test Suite">

<test name = "${test_name}" preserve-order="false">

<parameter name = "driverName" 					value = "iOS" />
<parameter name = "platformName" 				value = "iOS" />
<parameter name = "deviceName" 					value = "${device_name}" />
<parameter name = "platformVersion" 				value = "${platform_version}" />
<parameter name = "appInstallFlag"				value = "${app_install_flag}"  />
<parameter name = "app" 							value = "${app_location}" />
<parameter name = "bundleID" 					value = "com.fluke.mobility.elektra" />
<parameter name = "environmentName" 				value = "${environment_name}" />
<parameter name = "userName" 					value = "${user_name}" />
<parameter name = "password" 					value = "${password}" />
<parameter name = "isRealDevice" 		        value = "${is_real_device}" />
<parameter name = "handleUpgradeAlert" 		    value = "${handle_upgrade_alert}" />
<parameter name = "testResultsReportName"		value = "${test_results_report_name}"  />

<groups>
<run>
<include name="${group_name}" />
</run>
</groups>

<packages>
<package name="com.fluke.connect.app.*" />
</packages>
</test>

<listeners>
<listener class-name="com.fluke.connect.app.utils.TestResultsReport" />
</listeners>

</suite>